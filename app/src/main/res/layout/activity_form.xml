<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/note"
            android:layout_width="257dp"
            android:layout_height="111dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="97dp"
            android:background="#e9f0eb"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Note"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/sno"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="99dp"
            android:ems="10"
            android:hint="Ship No"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="160dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp"

            android:layout_marginEnd="123dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="208dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="215dp"
            android:layout_marginEnd="102dp"
            android:hint="Select a Date"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/upd"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="446dp"
            android:layout_marginEnd="163dp"
            android:background="@drawable/custom_btn"
            android:text="Update"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="72dp"
            android:text="Onet Marketing Pvt Ltd"
            android:textColor="#015714"
            android:textSize="16sp"
            tools:text="Onet Marketing Pvt Ltd" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="Created by NNJSoft©2020"
            android:textColor="#015714"
            android:textSize="12sp"
            tools:text="Created by NNJ Soft © 2020" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:text="All rights reserved"
            android:textColor="#015714"
            android:textSize="12sp"
            tools:text="All rights reserved" />
    </RelativeLayout>
</RelativeLayout>